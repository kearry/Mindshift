# Example environment variables for Mindshift

# OpenAI configuration
OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-4o-mini
OPENAI_SUMMARY_MODEL_NAME=gpt-4o-mini

# Default LLM selection (applies to topic creation and debates)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o-mini


# Ollama configuration
NEXT_PUBLIC_OLLAMA_API_BASE=http://localhost:11434

# Retrieval database paths
VECTOR_DB_PATH=data/lancedb
VECTOR_TABLE_NAME=mindshift_vectors

# Base URL for NextAuth/Server API
NEXTAUTH_URL=http://localhost:3000

# Secret used for manual login route
JWT_SECRET=
